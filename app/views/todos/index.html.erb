<%= link_to 'Add a new todo', new_todo_path %>

<div class="todos">
  <ul>
    <% @todos.each do |todo| %>
      <li class="<%= "completed" if todo.completed? %>">
        <%= todo.title %>
        <%= button_to 'Mark completed', todo_completions_path(todo) %>
      </li>
    <% end %>
  </ul>
</div>